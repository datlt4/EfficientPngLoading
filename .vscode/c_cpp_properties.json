{
    "version": 4,
    "configurations": [
        {
            "name": "Linux",
            "intelliSenseMode": "gcc-x64",
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "includePath": [
                "${workspaceFolder}/EPL",
                "/usr/include",
                "/usr/local/include",
                "/usr/include/opencv4",
                "/usr/include/opencv4/opencv2"
            ],
            "defines": [
                "LINUX",
                "_DEBUG",
                "UNICODE"
            ],
            "compilerArgs": [
                "-std=c++20"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "/usr/include/opencv4"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ]
}
